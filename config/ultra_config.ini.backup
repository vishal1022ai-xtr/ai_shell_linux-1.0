[API_KEYS]
# Get your API keys from the respective provider websites
# Groq: https://console.groq.com/keys
# Google AI Studio: https://aistudio.google.com/app/apikey
groq_api_key = YOUR_API_KEY_HERE
gemini_api_key = YOUR_API_KEY_HERE
[MODELS]
# Model for fast, simple tasks (command generation, execution)
groq_model = openai/gpt-oss-120b
# Model for complex tasks (code generation, analysis, general questions)
gemini_model = gemini-1.5-flash
# --- Smart Routing Configuration ---
# 'gemini' or 'groq' - Determines the default model for different task types
planning_model = gemini
execution_model = groq

[SETTINGS]
# Number of commands to store in session_history.json
max_history_entries = 200
# Default directory for backups
backup_directory = backups
# Automatically backup the shell's own code before self-improvement
auto_backup_on_improve = true
# Size limit in characters for requests sent to AI models
request_size_limit = 6000

[ADVANCED]
# Enable the shell to learn from interactions
adaptive_learning = true
# Enable self-improvement capabilities (/improve command)
self_improvement_enabled = true
# Enable context optimization to summarize long histories
context_optimization = true
# Enable automatic error recovery attempts
error_recovery = true
# Enable performance monitoring and analysis
performance_monitoring = true

[SAFETY]
# Require user confirmation for destructive commands like 'rm -rf'
confirm_destructive = true
# Timeout in seconds for foreground commands
timeout_seconds = 60


